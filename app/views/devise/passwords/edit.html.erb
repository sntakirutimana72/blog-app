<% content_for :styles do %>
  <%= stylesheet_link_tag 'users/devise/default' %>
<% end %>

<section class="devise-form-sec">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field-wrapper">
      <%= f.label :password, "New password", class: "field-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, class: "field", placeholder: "new password", autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="field-wrapper">
      <%= f.label :password_confirmation, "Confirm new password", class: "field-label" %>
      <%= f.password_field :password_confirmation, class: "field", placeholder: "re-type new password", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: "btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
