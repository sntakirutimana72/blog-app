<% content_for :styles do %>
  <%= stylesheet_link_tag 'users/devise/default' %>
<% end %>

<section class="devise-form-sec">
  <h2>Sign In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <div class="field-wrapper">
      <%= f.label :email, class: "field-label" %>
      <%= f.email_field :email, class: "field", placeholder: "Email", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field-wrapper">
      <%= f.label :password, class: "field-label" %>
      <%= f.password_field :password, class: "field", placeholder: "Password", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field-wrapper">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
