<li class="post-of-author">
  <%= link_to user_post_path(post.author, post) do %>
    <h4>Post #<%= post.id %>: <%= post.title %></h4>
    <p><%= post.text %></p>
    <p>
      <small>Comments: <%= post.comments_counter %></small>,
      <small>Likes: <%= post.likes_counter %></small>
    </p>
  <% end %>
</li>
