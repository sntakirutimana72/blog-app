<%= form_with url: user_post_comments_path(post.author, post), method: :post, local: true, scope: :comment do |f| %>
  <div class="comment-form-field">
    <%= f.text_field :text, { class: 'field', placeholder: 'Your comment', required: true } %>
    <%= f.submit 'Comment', class: 'btn' %>
  </div>
<% end %>
