<section class="users-show">
  <%= render 'shared/author', author: @user %>

  <div class="bio">
    <h4>Bio</h4>
    <p><%= @user.bio %></p>
  </div>

  <ul class="recent-posts-list">
    <% @user.recent_three_posts.each do |post| %>
      <%= render 'shared/post', post: %>
    <% end %>
  </ul>

  <%= link_to 'SEE ALL POSTS', user_posts_path(@user), class: 'all-posts' %>
</section>
